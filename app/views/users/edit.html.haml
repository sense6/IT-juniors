%section.user-edit
  .container
    .row
      .col-md-12
        - if can? :edit, @user
          .user-item__image
            = image_tag(gravatar_url(@user))
          = simple_form_for @user do |f|
            %p
              = f.label :first_name
              %br/
              = f.text_field :first_name
            %p
              = f.label :last_name
              %br/
              = f.text_field :last_name
            %p
              = f.submit
            = render partial: "skills"
            %br
            = link_to "Create company", new_company_path
